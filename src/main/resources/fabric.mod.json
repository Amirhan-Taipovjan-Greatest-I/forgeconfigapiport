{
  "schemaVersion": 1,
  "id": "${modId}",
  "version": "${modVersion}",

  "name": "${modName}",
  "description": "${modDescription}",
  "authors": [
    "${modAuthor}"
  ],
  "contact": {
    "homepage": "${modPageUrl}",
    "issues": "${modIssueUrl}",
    "sources": "${modSourceUrl}"
  },

  "license": "MPL-2",
  "icon": "mod_logo.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "${modGroup}.impl.ForgeConfigAPIPort"
    ],
    "client": [
      "${modGroup}.impl.client.ForgeConfigAPIPortClient"
    ]
  },
  "mixins": [
    "${modId}.fabric.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${minFabricVersion}",
    "fabric": ">=${minFabricApiVersion}",
    "com_electronwill_night-config_core": "*",
    "com_electronwill_night-config_toml": "*",
    "minecraft": ">=${minMinecraftVersion} <${nextMinecraftVersion}",
    "java": ">=17"
  },

  "suggests": {
    "configured": "*",
    "modmenu": "*"
  },

  "custom": {
    "modmenu": {
      "badges": [
        "library"
      ]
    },

    "configured": {
      "providers": [
        "${modGroup}.impl.integration.configured.ForgeConfigProvider"
      ]
    }
  }
}
